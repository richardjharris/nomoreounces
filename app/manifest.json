{
    "name": "No More Ounces",
    "version": "0.1",
    "author": "Richard Harris <richardjharris@gmail.com>",
    "description": "Convert US recipes to UK - no more ounces, Fahrenheit or cups!",
    "permissions": ["activeTab", "storage"],
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Convert recipe"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "options_page": "options.html",
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false,
        "chrome_style": true
    },
    "manifest_version": 2,
    "web_accessible_resources": [
        "content_script.js",
        "content_script.js.map"
    ]
}
