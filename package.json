{
    "name": "no-more-ounces",
    "description": "Convert US recipes to UK",
    "scripts": {
        "clean": "rm -rf dist",
        "format": "prettier 'lib/**/*.ts' --write",
        "build": "npm run clean && webpack",
        "test": "mocha -r ts-node/register 'tests/**/*.spec.ts'"
    },
    "license": "ISC",
    "devDependencies": {
        "@types/assert": "^1.4.6",
        "@types/chai": "^4.2.11",
        "@types/lodash": "^4.14.150",
        "@types/mocha": "^7.0.2",
        "@types/pluralize": "0.0.29",
        "@types/node": "^13.13.4",
        "chai": "^4.2.0",
        "eslint": "^6.8.0",
        "mocha": "^10.2.0",
        "nyc": "^15.0.1",
        "prettier-eslint": "^9.0.1",
        "ts-loader": "^7.0.1",
        "ts-node": "^8.9.1",
        "typescript": "^3.8.3",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11"
    },
    "dependencies": {
        "he": "^1.2.0",
        "lodash": "^4.17.15",
        "pluralize": "^8.0.0",
        "tslib": "^1.11.1"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "quoteProps": "consistent",
        "bracketSpacing": true,
        "trailingComma": "all",
        "arrowParens": "always",
        "endOfLine": "lf"
    }
